@model IEnumerable<ShopSell.Models.Product>

@{
    ViewBag.Title = "Index";
}

<section class="panel">
    <header class="panel-heading">
        Cập nhập sản phẩm
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/ManageProducts/Create" class="btn green" style="border: 1px solid; background: gainsboro">
                        Tạo mới <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Discount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DisplayPosition)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Edit</th>
                        <th>Upload</th>
                        <th>Upload Detail</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.ImageUrl) == false)
                                {
                                    <img src="@Url.Content(item.ImageUrl)" style="width: 80px" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price) đ
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount) %
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayPosition)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Images", "UploadImage", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Details Image", "UploadDetailsImages", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>