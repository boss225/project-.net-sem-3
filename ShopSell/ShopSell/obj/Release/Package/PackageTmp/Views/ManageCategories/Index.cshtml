@model IEnumerable<ShopSell.Models.Category>

@{
    ViewBag.Title = "Index";
}

<section class="panel">
    <header class="panel-heading">
        Danh mục sản phẩm
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/ManageCategories/Create" class="btn green" style="border: 1px solid; background: gainsboro">
                        Tạo mới <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th style="width:1%">
                            @Html.DisplayNameFor(model => model.SortOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(x => x.ParentId == 0))
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SortOrder)
                            </td>
                            <td>
                                <strong>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </strong>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                        foreach (var sub in Model.Where(x => x.ParentId == item.Id))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => sub.SortOrder)
                                </td>
                                <td>
                                    <span style="margin-left: 20px;"></span><i class="fa fa-chevron-right" aria-hidden="true"></i> @Html.DisplayFor(modelItem => sub.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sub.Status)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = sub.Id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete", new { id = sub.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                            foreach (var subs in Model.Where(x => x.ParentId == sub.Id))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => subs.SortOrder)
                                    </td>
                                    <td>
                                        <span style="margin-left: 40px;"></span><i class="fa fa-chevron-right" aria-hidden="true"></i> @Html.DisplayFor(modelItem => subs.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => subs.Status)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = subs.Id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Xóa", "Delete", new { id = subs.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>