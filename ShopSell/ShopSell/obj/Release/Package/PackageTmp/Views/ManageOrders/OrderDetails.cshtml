@model IEnumerable<ShopSell.Models.OrderDetail>
@{
    ViewBag.Title = "Details";
}

<section class="panel">
    <header class="panel-heading">
        Chi tiết thông tin đơn hàng
    </header>
    <div class="panel-body">
        <ul class="nav nav-pills nav-tabs">
            <li class="active"><a data-toggle="pill" href="#home">Đơn hàng</a></li>
            <li><a data-toggle="pill" href="#menu1">Khách hàng</a></li>
        </ul>

        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                <br />
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                Hình
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                Giá gốc
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Giảm giá
                            </th>
                            <th>
                                Thành tiền
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (string.IsNullOrEmpty(item.ImageUrl) == false)
                                    {
                                        <img src="@Url.Content(item.ImageUrl)" style="width: 80px" />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price) đ
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Discount) %
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReducedPrice) đ
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="5" style="text-align:right">
                                <strong>Tổng cộng</strong> :
                            </td>
                            @foreach (var item in Model)
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order.TotalPrice) đ
                                </td>
                                break;
                            }
                        </tr>
                    </tbody>
                </table>


            </div>
            <div id="menu1" class="tab-pane fade">
                <br />
                <div class="row">
                    <div class="col-sm-6">
                        <section class="panel">
                            <header class="panel-heading">
                                Thông tin người đặt hàng
                            </header>
                            <table class="table">
                                @foreach (var item in Model)
                                {
                                    <tr class="danger">
                                        <th>Tên</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Địa chỉ</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactAddress)
                                        </td>
                                    </tr>
                                    <tr class="danger"> 
                                        <th>Số điện thoại</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactPhone)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactEmail)
                                        </td>
                                    </tr>
                                    break;

                                }
                            </table>
                        </section>
                    </div>
                    <div class="col-sm-6">
                        <section class="panel">
                            <header class="panel-heading">
                                Thông tin người nhận
                            </header>
                            <table class="table table-striped">
                                @foreach (var item in Model)
                                {
                                    <tr class="success">
                                        <th>Tên</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactReceiverName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Địa chỉ</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactReceiverAddress)
                                        </td>
                                    </tr>
                                    <tr class="success">
                                        <th>Số điện thoại</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactReceiverPhone)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.ContactReceiverEmail)
                                        </td>
                                    </tr>
                                    break;

                                }

                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-heading">
        @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-info" })
    </div>

</section>
